 digitalWrite (3,HIGH);
}

void loop() {
  int Lvalue = analogRead(A2);
  float l = Lvalue;
  Serial.print("LValue=");
  Serial.print(l);
  Serial.print("\t");
  int Mvalue = analogRead(A1);
  float M = Mvalue;
  Serial.print("MValue=");
  Serial.print(M);
   Serial.print("\t");
  int Rvalue = analogRead(A0);
  float R = Rvalue;
  Serial.print("RValue=");
  Serial.println(R);

 if ( M>50 ){
 Forward();
 } 
  
  else if (l>50 ){
  RIGHT();}
  
  
  else if (R>50 ){
    Left();}
    
  
  else if (M < 50){
  Stop();}

}
 
